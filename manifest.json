{
  "manifest_version": 3,
  "name": "Thumbnail Preview",
  "version": "1.1",
  "description": "Ever wondered how your YouTube video thumbnail, title, and description would look like in the YouTube search results?",
  "author": "rbur0425@gmail.com",  
  "permissions": [
    "storage", 
    "activeTab", 
    "tabs", 
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/",
    "https://*.youtube.com/results*"
  ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/", "https://www.youtube.com/results*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}